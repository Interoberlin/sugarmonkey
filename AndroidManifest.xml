<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.interoberlin.sugarmonkey"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="de.interoberlin.sugarmonkey.controller.SugarMonkeyController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/SplashTheme.FullScreen" >
        <activity
            android:name="de.interoberlin.sugarmonkey.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme.FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.interoberlin.sugarmonkey.view.activities.DrawingActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="de.interoberlin.sugarmonkey.view.activities.NewActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="de.interoberlin.sugarmonkey.view.activities.AnimateTransformActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>